<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
				{{!-- <img src="/assets/images/university.png" alt="university" /> --}}
			<h1> Eat-Da-university! </h1>
		</div>
		<div class="col-md-6 text-center" class="task">
			<div class="row">
			  {{#each university_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 text-center">
					<pre>{{this.id}}. {{this.university_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="university_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			  {{#each university_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.university_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>
<!--Create form here
hint 1: This form will go inside a container and a row
hint 2:  <form action="/universities/create" method="POST">-->

<div class="row">

		<div class="col-md-12 text-center">
			<form class="create-update-form" action="/universities/create" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="university_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
					<h5 class="text-center">Enter a university you want to eat and click Submit!</h5>
				</div>
			</form>
		</div>

</div>


				
